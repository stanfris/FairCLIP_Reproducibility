#!/bin/bash

#SBATCH --partition=gpu_a100
#SBATCH --gres=gpu:1
#SBATCH --cpus-per-task=9
#SBATCH --gpus=1
#SBATCH --job-name=ft_test_b16
#SBATCH --ntasks=1
#SBATCH --time=04:00:00
#SBATCH --mem=32000M
#SBATCH --output=gender_hpo_distance_laplacian_%A.out

module purge
module load 2023
module load Anaconda3/2023.07-2

# Activate your environment
source activate fairclip
# Run your code

cd ../../FairCLIPlus

DATASET_DIR=../data/Harvard-FairVLMed
# DATASET_DIR=/PATH-TO_DATASET/FairVLMed
RESULT_DIR=../results/
MODEL_ARCH_NAME=vit-b16 # Options: vit-b16 | vit-l14
MODEL_ARCH=ViT-B/16
NUM_EPOCH=10
MODALITY_TYPE='slo_fundus'
ATTRIBUTE_TYPE=gender # Options: race | gender | ethnicity | language
SUMMARIZED_NOTE_FILE=gpt-4_summarized_notes.csv
LR=3.76e-06
BATCH_SIZE=32
LAMBDA=3.62
BATCH_SIZE_FAIR=32
PERF_FILE=${MODEL_ARCH_NAME}_${MODALITY_TYPE}_${LAMBDA}_FairerCLIP_laplacian.csv

srun python3 ./FairCLIPPlus_refactored.py \
		--dataset_dir ${DATASET_DIR} \
		--result_dir ${RESULT_DIR}run_anew/sinkhorn/fairCLIP/large/${ATTRIBUTE_TYPE}/glaucoma_FairerCLIP_${MODEL_ARCH_NAME}_${BATCH_SIZE}_${LAMBDA}_${LR} \
		--lr ${LR} \
		--batch_size ${BATCH_SIZE} \
		--perf_file ${PERF_FILE} \
		--model_arch ${MODEL_ARCH} \
		--attribute ${ATTRIBUTE_TYPE} \
		--batchsize_fairloss ${BATCH_SIZE_FAIR} \
		--lambda_fairloss ${LAMBDA} \
		--summarized_note_file ${SUMMARIZED_NOTE_FILE} \
		--weightslist 0.0 1.0 0.0 0.0 \
		--attributeslist race gender ethnicity language \
		--groups_per_attr 3 2 2 3 \
        --project debug_fact
